
@{
    Layout = null;
}

@Styles.Render("~/bundles/css-lib")
@Scripts.Render("~/bundles/script-lib")

<script src="~/Plugin/layer/layer.js"></script>

<link href="~/Plugin/ngtable/css/ng-table.css" rel="stylesheet" />
<script src="~/Plugin/ngtable/js/ng-table.js"></script>

<link href="~/Content/member/member-public.css" rel="stylesheet" />
<script src="~/Scripts/member/member-public.js"></script>
<link href="~/Content/member/member-layout.css" rel="stylesheet" />
<script src="~/Scripts/member/member-setting.js"></script>

<div class="tp-content" ng-app="app" ng-controller="info">
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label">姓名</label>
            <div class="col-sm-5">
                <input type="text" class="form-control" ng-model="infoModel.real_name">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">性别</label>
            <div class="col-sm-5">
                <div class="radio checkbox">
                    <label>
                        <input type="radio" name="sex" value="男" ng-model="infoModel.sex"> 男&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </label>
                    <label>
                        <input type="radio" name="sex" value="女" ng-model="infoModel.sex"> 女&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">身份证号</label>
            <div class="col-sm-5">
                <input type="text" class="form-control" ng-model="infoModel.idcard_number">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">电子邮件</label>
            <div class="col-sm-5">
                <input type="text" class="form-control" ng-model="infoModel.email">
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-2 control-label">备注</label>
            <div class="col-sm-5">
                <textarea class="form-control" rows="3" ng-model="infoModel.remark"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-5">
                <button type="submit" class="btn btn-sm btn-success" ng-click="Save()">保存</button>
            </div>
        </div>
    </form>
</div>